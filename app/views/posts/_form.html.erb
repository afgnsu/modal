<div class="modal-dialog post-modal">
  <div class="modal-content">
    <div class="modal-header">

        <h4 class="modal-title">文章</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="close">
          <span aria-hidden="true">&times;</span>
        </button>

    </div>
    <%= form_for @post, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul id="errors" class="errors"></ul>
        <div class="form-group">
          <%= f.label :title, '標題', class:"control-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, '內文', class: "control-label" %>
          <%= f.text_area :content, cols: 50, rows: 7, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit '送出', class: "btn btn-primary" %>
        <%= link_to "取消", "#", class: "btn btn-secondary", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
